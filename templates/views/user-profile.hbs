          <form class="profile-container">
            <div class="profile">
              <!-- Profile Form Fields -->
              <div class="profile-field">
                <label for="name">Name</label>
                <div class="field-content">
                  <p class="text">{{user.name}}</p>
                  {{!-- <input
                    class="editable"
                    type="text"
                    name="name"
                    value="{{user.name}}"
                    readonly
                  /> --}}
                </div>
              </div>

              <div class="profile-field">
                <label for="member-id">Member ID</label>
                <div class="field-content">
                  <p class="text">{{user.memberId}}</p>
                  {{!-- <input
                    type="text"
                    name="member-id"
                    value="{{user.memberId}}"
                    readonly
                  /> --}}
                </div>
              </div>

              <div class="profile-field">
                <label for="email">Email</label>
                <div class="field-content">
                  <p class="text">{{user.email}}</p>
                  {{!-- <input
                    type="email"
                    class="editable"
                    name="email"
                    value="{{user.email}}"
                    readonly
                  /> --}}

                </div>
              </div>

              <div class="profile-field">
                <label for="mobile">Mobile</label>
                <div class="field-content">
                  <p class="text">{{user.mobile}}</p>
                  {{!-- <input
                    type="tel"
                    class="editable"
                    name="mobile"
                    value="{{user.mobile}}"
                    readonly
                  /> --}}
                </div>
              </div>

              <div class="profile-field">
                <label for="language">Preferred Language</label>
                <div class="field-content">
                  <p class="text">{{user.language}}</p>
                  {{!-- <input
                    type="text"
                    class="editable"
                    name="language"
                    value="{{user.language}}"
                    readonly
                  /> --}}
                  {{! <button type="button" class="edit-button">âœŽ</button> }}
                </div>
              </div>

              <div class="profile-field">
                <label for="dob">Date of Birth</label>
                <div class="field-content">
                  <p class="text">{{makeDate user.dob}}</p>
                  {{!-- <input
                    type="text"
                    class="editable"
                    name="dob"
                    value="{{makeDate user.dob}}"
                    readonly
                  /> --}}

                </div>
              </div>

              <div class="profile-field">
                <label for="member-since">Anniversary Date</label>
                <div class="field-content">
                  <p class="text">{{makeDate user.createdAt}}</p>
                  {{!-- <input
                    type="text"
                    name="member-since"
                    value="{{makeDate user.createdAt}}"
                    readonly
                  /> --}}
                </div>
              </div>

                <div class="profile-field">
                <label for="member-since">Points Balance</label>
                <div class="field-content">
                  <p class="text">{{ user.membershipInfo.pointsAvailable}}</p>
                 
                </div>
              </div>

            </div>
            <div class="card-container">
              <p class="cardholder-name">{{user.name}} <br>
              <small>{{user.memberId}}</small>
              </p>
              
                <img  src="/images/card.png" alt="Logo" class="balance-card" id="cardImage" />
            </div>

            {{!-- <div class="lastbuttons">
          <input class="update-button" type="submit" value="&#x1F4DD; Update"> 
          <a href="/delete-user/?id={{user.id}}" class="delete-button">&#x1F5D1; Delete</a>
        </div> --}}

            <!-- Add remaining profile fields here as per original code -->

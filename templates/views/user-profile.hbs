                <div class="profile-field">
                <label for="member-since">Points Balance</label>
                <div class="field-content">
                  <p class="text">{{ commaFormat user.membershipInfo.pointsAvailable}}</p>
                 
                </div>
              </div>

            </div>


            <div class="card-container" >
              <div id="capture">
              <div class="download-overlay" id="download-card">
                <img  src="/images/download-white.png" height="22px"  />
              </div>

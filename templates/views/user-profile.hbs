                {{!-- <img  src="/images/vitality-card.svg" alt="Logo" class="balance-card back" id="cardImage" /> --}}
                {{else if (eq user.tier "Harmony")}}
                <img  src="/images/harmony-card.svg" alt="Logo" class="balance-card front" id="cardImage" />
                {{!-- <img  src="/images/harmony-card.svg" alt="Logo" class="balance-card back" id="cardImage" /> --}}
                {{else}}
                <img  src="/images/serenity-card.svg" alt="Logo" class="balance-card front" id="cardImage" />
                {{!-- <img  src="/images/serenity-card.svg" alt="Logo" class="balance-card back" id="cardImage" /> --}}
                {{/if}}
                </div>

                </div>


            {{!-- <div class="lastbuttons">
          <input class="update-button" type="submit" value="&#x1F4DD; Update"> 
